---

<Layout title="Yarden Regev">
	<header><Navbar {...contactInfo}/></header>
		<main>
			<section class="about">
				<About {...aboutInfo}/>
			</section>

			<section class="work-experience">
				<Title text='Work Experience'/>
				{workExperiencesInfo.map((work_experience) => (
					<WorkPlace {...work_experience} />
				  ))}
			</section>

			<section class="skills">
				<Title text='Skills & Technologies'/>
				<section>
					{skillsInfo.map((skill) => (
						<SkillCard {...skill} />
					  ))}
				</section>
			</section>

			<section class="education">
				<Title text='Education & Certifications'/>
				{educationsInfo.map((education)=>(
					<EducationCard {...education} />	
				))}
			</section>
			<section class="projects">
				<Title text='Software Projects'/>
				<section>
					{projectsInfo.map((project) => (
						<ProjectCard {...project} />
					  ))}
				</section>
				
			</section>
		</main>
		<Footer {...contactInfo}/>
</Layout>

<style>
	main {
		margin: 50px auto 0 auto;
		max-width: 1020px;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 100px;
	}

	.about {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 40px;
		width: 100%;
		height: calc(100vh - 50px);
		text-align: center;
		border-bottom: 1px solid rgb(30, 30, 30, 0.3);
		padding: 0 20px;
	}

	.work-experience {
		display: flex;
		flex-direction: column;
		gap: 50px;
		width: 100%;
		align-items: center;
		border-bottom: 1px solid rgba(30, 30, 30, 0.3);
		padding: 0px 20px 100px 20px;
	}

	.work-experience > section {
		display: flex;
		gap: 40px;
		flex-wrap: wrap;
		justify-content: center;
	}

	.education {
		display: flex;
		flex-direction: column;
		gap: 50px;
		width: 100%;
		align-items: center;
		border-bottom: 1px solid rgba(30, 30, 30, 0.3);
		padding: 0px 20px 100px 20px;
	}

	.education > section {
    display: flex;
    flex-direction: column; /* Stack items neatly */
    align-items: flex-start; /* Align all items to the left */
    gap: 40px;
    width: 100%;
    max-width: 800px; /* Keeps it readable */
}


	.skills { 
		display: flex;
		flex-direction: column;
		gap: 40px;
		width: 100%;
		align-items: center;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1); /* Lighter contrast for subtle separation */
		padding: 0px 20px 100px 20px;
		text-align: center;
		border-bottom: 1px solid rgba(30, 30, 30, 0.3);

	}

	.skills > section {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); /* Responsive grid */
		gap: 30px;
		justify-content: center;
		max-width: 1200px; /* Prevents too much stretching on wide screens */
		width: 100%;
	}


	.projects {
		display: flex;
		flex-direction: column;
		gap: 50px;
		width: 100%;
		align-items: center;
		border-bottom: 1px solid rgb(30, 30, 30, 0.3);
		padding: 0px 20px 100px 20px;
	}
	
	.projects > section {
		display: flex;
		gap: 40px;
		flex-wrap: wrap;
		justify-content: center;
	}

	.contact {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 50px;
		width: 100%;
		padding: 0px 20px 100px 20px;
	}

	@media screen and (max-width: 700px) {
		main {
			margin: 0 auto;
		}

		.about {
			height: 80vh;
		}

		.about > img {
			width: 100px;
		}
	}
</style>
