---
const { linked_in, github, resume, email} = Astro.props;
---


<footer class="footer">
    <span>Yarden Regev</span>
    <ul>
        <li><a href={linked_in} target="_blank">Linkedin</a></li>
        <li><a href={github} target="_blank">Github</a></li>
        <li><a href={resume} target="_blank">Resume</a></li>
        <li class="contact-btn"><a href=`mailto:${email}`>Email me!</a></li>
    </ul>
</footer>

<style>
    footer {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
        align-items: center;
        width: calc(100% - 40px);
        border-top: 1px solid rgb(30, 30, 30, 0.3);
        text-align: center;
        padding: 20px;
    }

    footer > ul {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
        list-style: none;
        gap: 30px;
        padding: 0;
    }

    footer > ul > li > a {
        color: #1e1e1e;
        transition: all .3s;
    }

    footer > ul > li > a:hover {
        color: orange;
    }

    footer > ul > .contact-btn {
        background-color: #1e1e1e;
        background: linear-gradient(160deg, rgb(59, 59, 59) 10%, rgba(30,30,30,1) 100%);
        padding: 5px 10px;
        border-radius: 12px;
        font-weight: 600;
    }

    footer > ul > .contact-btn > a {
        color:white;
    }

    @media screen and (max-width: 700px) {
    footer {
        width: 100%;
        padding: 10px;
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        align-items: center;
        background-color: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(15px) saturate(150%);
        border-top: 1px solid rgba(30, 30, 30, 0.3);
    }

    footer > ul {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: center;
        gap: 8px; /* Keeps items neatly spaced */
        font-size: 14px;
        padding: 0;
        margin: 0;
    }

    footer > ul > li {
        white-space: nowrap;
    }

    footer > ul > .contact-btn {
        font-size: 14px;
        padding: 5px 8px;
        border-radius: 8px;
        flex-shrink: 1;
        max-width: 100px;
        overflow: hidden;
        text-overflow: ellipsis;
    }
}

</style>
