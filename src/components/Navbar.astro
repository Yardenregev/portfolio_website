---
const { linked_in, github, resume, email} = Astro.props;
---

<nav class="navbar">
    <span>Yarden Regev</span>
    <ul>
        <li><a href={linked_in} target="_blank">Linkedin</a></li>
        <li><a href={github} target="_blank">Github</a></li>
        <li><a href={resume} target="_blank">Resume</a></li>
        <li class="contact-btn"><a href=`mailto:${email}`>Email me!</a></li>
    </ul>
</nav>

<style>
    .navbar {
        z-index: 10;
        position: fixed;
        top: 0;
        left: 0;
        display: flex;
        justify-content: space-around;
        align-items: center;
        width: calc(100% - 40px);
        height: 50px;
        border-bottom: 1px solid rgb(30, 30, 30, .3);
        background-color: rgb(255, 255, 255, .8);
        backdrop-filter: blur(20px) saturate(200%);
        padding: 0 20px;
    }

    .navbar > span {
        font-weight: 600;
    }

    .navbar > ul {
        display: flex;
        align-items: center;
        list-style: none;
        gap: 30px;
        font-size: 20px;
    }

    .navbar > ul > li > a {
        color: #1e1e1e;
        transition: all .3s;
    }
    .navbar > ul > li > a:hover {
        color: orange;
    }

    .navbar > ul > .contact-btn {
        background-color: #1e1e1e;
        background: linear-gradient(160deg, rgb(59, 59, 59) 10%, rgba(30,30,30,1) 100%);
        padding: 5px 10px;
        border-radius: 12px;
        font-size: 25px;
        font-weight: 600;
    }

    .navbar > ul > .contact-btn > a {
        color: #fff;
    }

    @media screen and (max-width: 700px) {
    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 50px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 10px;
        background-color: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(15px) saturate(150%);
        z-index: 100;
        overflow: hidden; /* Prevents content from overflowing */
    }

    .navbar > ul {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: center;
        gap: 8px; /* Reduce gap to fit everything */
        font-size: 14px; /* Slightly smaller for mobile */
        padding: 0;
        margin: 0;
    }

    .navbar > ul > li {
        white-space: nowrap;
    }

    .navbar > ul > .contact-btn {
        font-size: 14px; /* Adjust font size */
        padding: 5px 8px;
        border-radius: 8px;
        flex-shrink: 1; /* Allow it to shrink */
        max-width: 100px; /* Prevents it from overflowing */
        overflow: hidden;
        text-overflow: ellipsis;
    }
}


</style>
