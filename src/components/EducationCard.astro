---
const { title, icon, date, school, link } = Astro.props;
---

<div class="education-card">
  <div class="card-header">
    <img class="icon" src={icon} alt="education icon" />
    <div class="header-text">
      <h3 class="title">{title}</h3>
      <p class="school">{school}</p>
      <p class="date">{date}</p>
      {link && (
        <a href={link} class="cert-link" target="_blank">
          View Certification
        </a>
      )}
    </div>
  </div>
</div>

<style>
  .education-card {
    width: 100%;
    max-width: 600px;
    background: #ffffff;
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  }

  .education-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 14px rgba(0, 0, 0, 0.12);
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 10px;
  }

  .icon {
    width: 50px;
    height: 50px;
    object-fit: contain;
    border-radius: 8px;
    background: #e8f0ff;
    padding: 5px;
  }

  .header-text {
    display: flex;
    flex-direction: column;
  }

  .title {
    font-size: 1.2rem;
    font-weight: 600;
    color: #222;
  }

  .school {
    font-size: 1rem;
    color: #444;
    font-weight: 500;
  }

  .date {
    font-size: 0.9rem;
    color: #666;
  }

  .cert-link {
    font-size: 0.9rem;
    color: #0044cc;
    font-weight: 500;
    text-decoration: none;
  }

  .cert-link:hover {
    text-decoration: underline;
    color: #002a80;
  }
</style>
