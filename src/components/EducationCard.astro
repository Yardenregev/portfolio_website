---
const { title, icon, date, school, link } = Astro.props;
---

<div class="education-item">
  <img class="icon" src={icon} alt="education icon"/>
  <div class="details">
    <h3 class="title">{title}</h3>
    <p class="school">{school}</p>
    <p class="date">{date}</p>
    {link && (
      <a href={link} class="cert-link" target="_blank">
        View Certification
      </a>
    )}
  </div>
</div>

<style>
  .education-item {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 18px;
    border-radius: 10px;
    background: #f9f9f9;
    border-left: 5px solid #1e1e1e;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease-in-out;
    width: 100%;
    max-width: 700px;
  }

  .education-item:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
  }

  .icon {
    font-size: 36px;
    color: #007bff;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    background: #eaf4ff;
    border-radius: 50%;
  }

  .details {
    display: flex;
    flex-direction: column;
  }

  .title {
    font-size: 1.3rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 4px;
  }

  .school {
    font-size: 1rem;
    color: #555;
    margin-bottom: 2px;
  }

  .date {
    font-size: 0.9rem;
    color: #777;
  }

  .cert-link {
    font-size: 0.9rem;
    color: #007bff;
    font-weight: 500;
    margin-top: 6px;
    text-decoration: none;
    transition: color 0.2s ease-in-out;
  }

  .cert-link:hover {
    text-decoration: underline;
    color: #0056b3;
  }
</style>
