---
const { title, description, tech, image, repo, demo } = Astro.props;
---

<div class="project-card">
  <img class="project-image" src={image} alt={`Screenshot of ${title}`} />
  <div class="project-content">
    <h3 class="title">{title}</h3>
    <p class="description">{description}</p>
    <div class="tech-stack">
      {tech.map((item) => (
        <span class="tech">{item}</span>
      ))}
    </div>
    <div class="links">
      {repo && <a href={repo} class="repo-link" target="_blank">View on GitHub</a>}
      {demo && <a href={demo} class="demo-link" target="_blank">Live Demo</a>}
    </div>
  </div>
</div>

<style>
  .project-card {
    display: flex;
    flex-direction: column;
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    max-width: 600px;
  }

  .project-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 14px rgba(0, 0, 0, 0.12);
  }

  .project-image {
    width: 100%;
    height: 180px;
    object-fit: cover;
  }

  .project-content {
    padding: 16px;
  }

  .title {
    font-size: 1.3rem;
    font-weight: 600;
    color: #222;
  }

  .description {
    font-size: 1rem;
    color: #444;
    margin: 8px 0;
  }

  .tech-stack {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    margin-bottom: 10px;
  }

  .tech {
    background: #e8f0ff;
    color: #0044cc;
    padding: 4px 8px;
    border-radius: 6px;
    font-size: 0.85rem;
  }

  .links {
    display: flex;
    gap: 15px;
  }

  .repo-link, .demo-link {
    font-size: 0.9rem;
    color: #0044cc;
    font-weight: 500;
    text-decoration: none;
  }

  .repo-link:hover, .demo-link:hover {
    text-decoration: underline;
    color: #002a80;
  }
</style>
