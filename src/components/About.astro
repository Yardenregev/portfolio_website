---
import Title from "../components/Title.astro";
import SecondaryTitle from '../components/SecondaryTitle.astro';

const { intro, titles, secondaryTitles, image } = Astro.props
---

<section class="about-section">
    <div class="container">
        <div class="profile">
            <img 
                src={image} 
                alt="profile picture"
                class="profile-image"
            />
        </div>
        <article class="content">
            <p class="intro">{intro}</p>
            <div class="titles-group">
                {titles.map((title) => (
                    <Title text={title} />
                ))}
            </div>
            <div class="skills-group">
                {secondaryTitles.map((secondaryTitle) => (
                    <SecondaryTitle text={secondaryTitle} />
                ))}
            </div>
        </article>
    </div>
</section>

<style>
    .about-section {
        padding: 4rem 1rem;
        min-height: 100vh;
        display: flex;
        align-items: center;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        align-items: center;
    }

    @media (min-width: 768px) {
        .container {
            grid-template-columns: 300px 1fr;
        }
    }

    .profile {
        display: flex;
        justify-content: center;
    }

    .profile-image {
        width: 200px;
        height: 200px;
        border-radius: 9999px;
        object-fit: cover;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .profile-image:hover {
        transform: scale(1.05);
    }

    .content {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .intro {
        color: #1e1e1e;
        font-style: italic;
        font-size: clamp(1.25rem, 2vw, 1.5rem);
        margin: 0;
        opacity: 0;
        animation: fadeIn 0.5s ease forwards;
    }

    .titles-group, .skills-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>