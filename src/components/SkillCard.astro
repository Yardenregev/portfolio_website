---
const { title, description, icon } = Astro.props;
---

<article class="skill-card">
    {icon && <img src={icon} alt={`${title} icon`} class="icon"/>}
    <div class="content">
        <h3>{title}</h3>
        <p set:html={description}></p>
    </div>
</article>

<style>
    .skill-card {
    display: flex;
    align-items: center;
    gap: 15px;
    width: 100%;
    max-width: 400px;
    padding: 15px;
    background: linear-gradient(160deg, rgb(59, 59, 59) 10%, rgba(30,30,30,1) 100%);
    border-radius: 15px;
    color: #fff;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    text-align: left;
}

.skill-card:hover {
    transform: translateY(-5px);
    box-shadow: 0px 4px 10px rgba(255, 255, 255, 0.2);
}

.icon {
    width: 40px;
    height: 40px;
}

.content {
    display: flex;
    flex-direction: column;
    max-width: 85%; /* Prevents text from stretching */
}

.content h3 {
    font-size: 18px;
    margin-bottom: 5px;
}

.content p {
    font-size: 14px;
    color: #d1d1d1;
    line-height: 1.6; /* More breathing space */
    max-width: 350px; /* Limits width for readability */
}

</style>
