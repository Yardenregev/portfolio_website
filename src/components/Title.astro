---
// Title.astro
const { text } = Astro.props;
---

<h2 class="title">
    {text}
</h2>

<style>
    .title {
        width: 100%;
        font-size: 2.5rem;
        text-transform: uppercase;
        margin: 0;
        white-space: nowrap;
        background: #1e1e1e; /* Changed from gradient to solid color */
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        opacity: 0;
        animation: fadeIn 0.5s ease forwards 0.2s;
        text-align: center;
    }

    @media (max-width: 1200px) {
        .title {
            font-size: 2rem;
        }
    }

    @media (max-width: 768px) {
        .title {
            font-size: 1.75rem;
        }
    }

    @media (max-width: 480px) {
        .title {
            font-size: 1.25rem;
        }
    }

    @media (max-width: 360px) {
        .title {
            font-size: 1rem;
        }
    }
</style>